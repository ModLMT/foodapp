<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChitietActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarct"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#E73F0B"
        app:title="Chi tiết món ăn"
        app:titleTextColor="#FFFFFE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgchitiet"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tenmonct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="Tên món"
                android:textColor="#E73F0B"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/giachitiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="Giá"
                android:textColor="#F63131"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/spinner"
                android:gravity="center"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnthemgh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E73F0B"
                android:text="Đặt ngay"
                android:textColor="#FFFFFE"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Mô tả chi tiết"
            android:textColor="#000"
            android:textSize="27sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/motachitiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="20sp" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>